{
  "name": "react-context-fetcher",
  "version": "0.0.0-development",
  "description": "Factory to build provider and consumers to fetch data in React",
  "repository": "github:amille44420/react-fetcher",
  "bugs": "https://github.com/amille44420/react-fetcher/issues",
  "homepage": "https://github.com/amille44420/react-fetcher",
  "keywords": [
    "react",
    "reactjs",
    "fetch"
  ],
  "license": "MIT",
  "author": "Adrien Mille <adrien.mille.aer@gmail.com>",
  "main": "lib/index.js",
  "unpkg": "dist/react-context-fetcher.js",
  "module": "es/index.js",
  "files": [
    "lib",
    "es",
    "src",
    "dist",
    "index.d.ts"
  ],
  "scripts": {
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "babel src --out-dir es",
    "build:umd": "cross-env NODE_ENV=development rollup -c -o dist/react-context-fetcher.js",
    "build:umd:min": "cross-env NODE_ENV=production rollup -c -o dist/react-context-fetcher.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "clean": "rimraf lib dist es coverage",
    "format": "prettier --write \"{src,test}/**/*.{js,ts}\" index.d.ts",
    "lint": "eslint src test",
    "prepare": "npm run clean && npm run build",
    "pretest": "npm run lint",
    "test": "jest",
    "coverage": "codecov",
    "commit": "git-cz"
  },
  "peerDependencies": {
    "react": "^16.8.6"
  },
  "dependencies": {
    "@babel/runtime": "^7.4.3",
    "hoist-non-react-statics": "^3.3.0",
    "react-is": "^16.8.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-decorators": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/plugin-transform-react-display-name": "^7.2.0",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/travis-cli": "^7.5.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "codecov": "^3.3.0",
    "commitizen": "^3.1.1",
    "create-react-class": "^15.6.3",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "es3ify": "^0.2.0",
    "eslint": "^6.0.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "glob": "^7.1.3",
    "jest": "^24.7.1",
    "jest-dom": "^3.1.3",
    "prettier": "^1.16.4",
    "react": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "react-testing-library": "^7.0.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.8.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.3",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-replace": "^2.1.1",
    "rollup-plugin-terser": "^5.0.0",
    "waait": "^1.0.4"
  },
  "browserify": {
    "transform": [
      "loose-envify"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testURL": "http://localhost"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

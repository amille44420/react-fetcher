{
  "name": "react-context-fetcher",
  "version": "2.0.0",
  "description": "Factory to build provider and consumers to fetch data in React",
  "repository": "github:amille44420/react-fetcher",
  "bugs": "https://github.com/amille44420/react-fetcher/issues",
  "homepage": "https://github.com/amille44420/react-fetcher",
  "keywords": [
    "react",
    "reactjs",
    "fetch",
    "ssr"
  ],
  "license": "MIT",
  "author": "Adrien Mille <adrien.mille.aer@gmail.com>",
  "main": "lib/index.js",
  "unpkg": "dist/react-context-fetcher.js",
  "module": "es/index.js",
  "files": [
    "lib",
    "es",
    "src",
    "dist",
    "index.d.ts"
  ],
  "scripts": {
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "babel src --out-dir es",
    "build:umd": "cross-env NODE_ENV=development rollup -c -o dist/react-context-fetcher.js",
    "build:umd:min": "cross-env NODE_ENV=production rollup -c -o dist/react-context-fetcher.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "clean": "rimraf lib dist es coverage",
    "format": "prettier --write \"{src,test}/**/*.{js,ts}\" index.d.ts",
    "lint": "eslint src test",
    "prepare": "npm run clean && npm run build",
    "pretest": "npm run lint",
    "test": "jest",
    "coverage": "codecov",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "prop-types": "15.7.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.7.4",
    "hoist-non-react-statics": "^3.3.1",
    "react-is": "^16.12.0",
    "shallowequal": "^1.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
    "@babel/plugin-transform-react-display-name": "^7.7.4",
    "@babel/plugin-transform-react-jsx": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@commitlint/travis-cli": "^8.2.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "codecov": "^3.6.1",
    "commitizen": "^4.0.3",
    "create-react-class": "^15.6.3",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "es3ify": "^0.2.2",
    "eslint": "^6.7.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "glob": "^7.1.6",
    "jest": "^24.9.0",
    "jest-dom": "^4.0.0",
    "prettier": "^1.19.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.5",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "waait": "^1.0.5",
    "semantic-release": "^16.0.1"
  },
  "browserify": {
    "transform": [
      "loose-envify"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testURL": "http://localhost"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
